<header class="main-header">
    <!-- Logo -->
    <a href="#" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b>A</b>MS</span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg"><b>Agent</b> Management</span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <input type="hidden" id="agent-code" value="{{loggedIn.agent}}"/>
        <div class="navbar-custom-menu" id="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <li>
                    <a href="#balance" class="get-current-balance">
                        <strong class="agent_balance" id="agent-current-balance">{{currency loggedIn.balance}}
                            <i class="fa fa-refresh" aria-hidden="true"></i>
                            {{#if (checkMinus loggined.balance)}}
                                <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                            {{/if}}
                        </strong>
                    </a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-user" aria-hidden="true"></i>&nbsp;&nbsp;
                        {{loggedIn.agent}}
                        <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">Change password</a></li>
                            <li class="divider"></li>
                            <li><a href="/logout">Signout</a></li>
                        </ul>
                </li>
            </ul>
        </div>
    </nav>
</header>

