<!-- 공통으로 모달을 사용할 수 있도록 변경할 것 -->
<!-- Modal 에이전트를 생성할 경우 -->
<div class="modal" id="modal_credit_to" role="dialog">
    <form class="modal-dialog" method="post" action="/api/v1//agent/credit/to" id="frm_credit_to">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Credit To</h4>
            </div>
            <div class="modal-body">
                <div class="panel panel-default form-group ">
                    <div class="panel-heading">My Info</div>
                    <div class="panel-body">
                        <div class="col-md-8">
                            <label class="control-label">My Code</label>
                            <input type="text" class="form-control" readonly required autocomplete="off" value="{{loggedIn.agent}}"/>
                        </div>
                        <div class="col-md-4">
                            <label>My Balance</label>
                            <input type="number" min="0" class="form-control my_balance" readonly required autocomplete="off" value="{{loggedIn.balance}}"/>
                        </div>
                    </div>
                </div>

                <div class="panel panel-default form-group ">
                    <div class="panel-heading">Target Info</div>
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="col-md-12">
                                <label class="control-label">Target Agent</label>
                                <input type="text" class="form-control" name="target" id="credit_target" readonly required autocomplete="off" value=""/>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4">
                                <label>Balance</label>
                                <input type="number" class="form-control" name="balance" id="credit_balance" readonly required autocomplete="off"  value=""/>
                            </div>
                            <div class="col-md-4">
                                <label>Amount</label>
                                <input type="number" min="1" step="1" class="form-control" name="amount" id="credit_amount" required autocomplete="off" value=""/>
                            </div>
                            <div class="col-md-4">
                                <label>Sum Balance</label>
                                <input type="number" min="1"  class="form-control"  name="sum_balance" id="credit_sum_balance" readonly   required autocomplete="off" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label>Memo</label>
                    <input type="text" class="form-control" name="memo" id="memo" required autocomplete="off" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary btn-credit-to-submit">Confirm</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </form>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
